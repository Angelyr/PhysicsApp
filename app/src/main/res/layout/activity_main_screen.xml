<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="thelawsofphysics.physicsapp.MainScreen">

    <Button
        android:id="@+id/variablesBtn"
        android:layout_width="129dp"
        android:layout_height="102dp"
        android:text="Variables"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="102dp"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/constantsBtn"
        android:layout_width="129dp"
        android:layout_height="102dp"
        android:text="Constants"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="159dp"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/otherBtn"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/otherBtn"
        android:layout_width="129dp"
        android:layout_height="102dp"
        android:text="Other"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="159dp"
        android:layout_marginRight="42dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/equationsBtn"
        android:layout_width="129dp"
        android:layout_height="102dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="102dp"
        android:text="Equations"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/variablesBtn"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
